<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="/css/style.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.6.0/css/all.min.css">
    <link rel="icon" href="/favicon.ico" type="image/x-icon">
    <title>Converter</title>
</head>
<body>
    <div class="top-container">
        <form action="/convert" method="POST" id="form">
            <h1><i class="fa fa-youtube-play" aria-hidden="true"></i>Youtube Converter</h1>
            <h4>Enter the video URL</h4>
            <h5>Notice:The mp4 download function can only download 360p.</h5>
            <div>
                <input type="text" name="videoURL" placeholder="Enter YouTube URL" required>
                <select name="format" id="format" required>
                    <option value="mp3">MP3</option>
                    <option value="mp4">MP4</option>
                </select>
                <button type="submit">Convert</button>
            </div>
        </form>
    </div>
    
    <div class="bottom-container">
        <% if(typeof success !== "undefined" && success) { %>
            <div class="success">
                <p><%= song_title %></p>
                <a href="<%= song_link %>" download><button id="download-btn">DOWNLOAD</button></a>
            </div>
        <% } else if(typeof success !== "undefined" && !success) { %>
            <div class="errors">
                <p><%= message %></p>
            </div>
        <% } %>
    </div>
</body>
</html>